      "delete": {
        "summary": "Delete user",
        "tags": [
          "v1",
          "users"
        ],
        "operationId": "deleteV1UsersById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "User ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          },
          "400": {
