  "paths": {
    "/v1/events": {
      "get": {
        "summary": "Event stream",
        "description": "Server-Sent Events stream that emits a tick every second.",
        "tags": [
          "v1",
          "streaming"
        ],
        "operationId": "getV1Events",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "text/event-stream": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                }
              }
            }
          }
        },
        "security": []
      }
    },
