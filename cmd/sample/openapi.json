  "components": {
    "schemas": {
      "HealthResp": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "time": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "LegacyResp": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "ListUsersResp": {
        "type": "object",
        "properties": {
          "total": {
            "type": "integer"
          },
          "users": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/User"
            }
          }
        }
      },
      "ProblemDetail": {
        "type": "object",
        "properties": {
          "detail": {
            "type": "string",
            "description": "Explanation specific to this occurrence"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "field": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                },
                "value": {}
              },
              "required": [
                "field",
                "message"
              ]
            },
            "description": "Field-level validation errors"
          },
          "instance": {
            "type": "string",
            "description": "URI reference to the specific occurrence"
          },
          "status": {
            "type": "integer",
            "description": "HTTP status code"
          },
          "title": {
            "type": "string",
            "description": "Human-readable summary"
          },
          "type": {
            "type": "string",
            "description": "URI reference identifying the problem type"
          }
        },
        "required": [
          "status"
        ]
      },
      "User": {
        "type": "object",
        "properties": {
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "email": {
            "type": "string",
            "pattern": "^[^@]+@[^@]+$"
          },
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "role": {
            "type": "string",
            "enum": [
              "admin",
              "member",
              "viewer"
            ]
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "description": "JWT bearer token",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "tags": [
    {
      "name": "files",
      "description": "File upload and download"
    },
    {
      "name": "ops",
      "description": "Operational endpoints"
    },
    {
      "name": "streaming",
      "description": "Real-time streaming"
    },
    {
      "name": "users",
      "description": "User management"
    },
    {
      "name": "v1",
      "description": "Version 1 API"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ]
}
